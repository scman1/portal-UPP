<h2 class="standout">
  <%= title -%> (<%= ports.count -%>)
</h2>
<% if ports.blank? -%>
    <p class="none_text" style="margin-left:20px;"><%= t(".none") %></p>
<% else %>
    <div>
      <% ports.each do |p| -%>
          <div class="workflow-port">
            <h3><%= p.name %> <%= "<span class='mime_type'>(#{p.mime_type})</span>".html_safe unless p.mime_type.blank? %></h3>

            <p>
              <strong><%= t(".description") %>:</strong>
              <%= simple_format(p.description) %>
            </p>

            <% unless p.example_value.blank? %>
                <p>
                  <strong><%= t(".example_value") %>:</strong>
                </p>
                <pre class="script_example_data_box"><%= p.example_value %></pre>
            <% end %>
          </div>
      <% end %>
    </div>
<% end %>
