<% related_items = workflow.runs.where(:sweep_id => nil, :workflow_version => version, :embedded => :false) +
                   workflow.sweeps.where(:workflow_version => version) %>
<% related_items = related_items.select {|i| i.can_view? }.sort_by(&:created_at).reverse %>

<h3><%= t(".related_runs") %></h3>
<% if related_items.empty? %>
  <span class="none_text" style="margin-left: 10px"><%= t(".none") %></span>
<% else %>
  <%= render :partial => 'taverna_player/runs/runs_and_sweeps_list', :locals => { :items => related_items } %>
<% end %>
